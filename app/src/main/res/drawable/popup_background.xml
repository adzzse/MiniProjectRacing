<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền xanh của popup -->
    <solid android:color="#A0DDFD"/> <!-- Thay bằng màu xanh của bạn nếu cần -->

    <!-- Bo tròn góc đều 20dp -->
    <corners android:radius="20dp"/>

    <!-- Tạo padding để nội dung không bị sát viền -->
    <padding
        android:left="15dp"
        android:top="15dp"
        android:right="15dp"
        android:bottom="15dp"/>
</shape>
